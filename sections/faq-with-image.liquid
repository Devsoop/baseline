{% comment %}
  FAQ with Image Section
  Uses store theme typography — no font overrides
{% endcomment %}

<style>
  .faq-section-{{ section.id }} {
    position: relative;
    min-height: 560px;
    overflow: hidden;
    background-color: #0a0a0a;
    background-image: radial-gradient(ellipse 80% 50% at 50% 28%, #81091b 0%, #690212 25%, #560410 55%, rgb(99 4 17 / 41%) 85%, transparent 100%);
  }

  /* Background image — right half */
  .faq-section-{{ section.id }} .faq-bg-image {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    display: block;
  }

  /* Gradient overlay blending image into background colour */
  .faq-section-{{ section.id }} .faq-bg-overlay {
    position: absolute;
    top: 0;
    right: 0;
    width: 65%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  /* Content wrapper */
  .faq-section-{{ section.id }} .faq-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    width: 100%;
    box-sizing: border-box;
  }

  /* FAQ column — left ~48% */
  .faq-section-{{ section.id }} .faq-col {
    width: 48%;
    max-width: 480px;
  }

  /* Heading — inherits theme h2 styles, only colour overridden */
  .faq-section-{{ section.id }} .faq-heading {
    color: {{ section.settings.heading_color }};
    margin: 0 0 28px 0;
    line-height: 120%;
    font-size: 52px;
    font-weight:500;
    
  }

  /* Accordion list */
  .faq-section-{{ section.id }} .faq-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }


  /* Question button — inherits body font/size/weight from theme */
  .faq-section-{{ section.id }} .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background: none;
    border: none;
    padding: 8px 0;
    cursor: pointer;
    text-align: left;
    font-size: inherit;
    font-family: inherit;
    font-weight: inherit;
    line-height: 1.4;
    gap: 12px;
    transition: opacity 0.2s ease;
  }

  .faq-section-{{ section.id }} .faq-question:hover {
    opacity: 0.85;
  }

  .faq-section-{{ section.id }} .faq-question-text {
    flex: 1;
    font-size:20px;
    font-weight:500;
    line-height:100%;
    color:white;
  }

  /* Chevron icon */
  .faq-section-{{ section.id }} .faq-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .faq-section-{{ section.id }} .faq-icon svg {
    width: 16px;
    height: 16px;
    stroke: {{ section.settings.question_color }};
    fill: none;
  }

  .faq-section-{{ section.id }} .faq-item.is-open .faq-icon {
    transform: rotate(180deg);
  }

  /* Answer panel */
  .faq-section-{{ section.id }} .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.35s ease;
  }

  .faq-section-{{ section.id }} .faq-item.is-open .faq-answer {
    max-height: 600px;
  }

  /* Answer inner — inherits theme body font/size entirely */
  .faq-section-{{ section.id }} .faq-answer-inner {
    padding-bottom: 18px;
    color: rgba(255, 255, 255, 0.8);
    font-family: inherit;
    font-size:16px;
    font-weight:400;
    line-height:160%;

  }

  .faq-section-{{ section.id }} .faq-answer-inner p {
    margin: 0;
  }

  .faq-section-{{ section.id }} .faq-answer-inner a {
    color: {{ section.settings.answer_color }};
    text-decoration: underline;
  }

  /* ===================== RESPONSIVE ===================== */
  @media screen and (max-width: 900px) {
    .faq-section-{{ section.id }} .faq-bg-image {
      width: 100%;
      opacity: 0.2;
    }
    .faq-section-{{ section.id }} .faq-bg-overlay {
      display: none;
    }
    .faq-section-{{ section.id }} .faq-col {
      width: 100%;
      max-width: 100%;
    }
  }

  @media screen and (max-width: 600px) {
    .faq-section-{{ section.id }} .faq-content {
      padding-left: 20px;
      padding-right: 20px;
    }
  }
</style>

<section
  class="faq-section-{{ section.id }}"
  id="faq-section-{{ section.id }}"
>
  {%- if section.settings.background_image != blank -%}
    <img
      class="faq-bg-image"
      src="{{ section.settings.background_image | image_url: width: 1400 }}"
      alt="{{ section.settings.background_image.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.background_image.width }}"
      height="{{ section.settings.background_image.height }}"
    >
    <div class="faq-bg-overlay"></div>
  {%- endif -%}

  <div class="faq-content">
    <div class="faq-col">

      {%- if section.settings.heading != blank -%}
        <h2 class="faq-heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <ul class="faq-list" role="list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'faq_item' -%}
            <li
              class="faq-item"
              {{ block.shopify_attributes }}
            >
              <button
                class="faq-question"
                aria-expanded="false"
                aria-controls="faq-answer-{{ block.id }}"
                id="faq-btn-{{ block.id }}"
              >
                <h2 class="faq-question-text">{{ block.settings.question }}</h2>
                <span class="faq-icon" aria-hidden="true">
                  <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                </span>
              </button>
              <div
                class="faq-answer"
                id="faq-answer-{{ block.id }}"
                role="region"
                aria-labelledby="faq-btn-{{ block.id }}"
              >
                <div class="faq-answer-inner">
                  {{ block.settings.answer }}
                </div>
              </div>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

    </div>
  </div>
</section>

<script>
(function () {
  var section = document.getElementById('faq-section-{{ section.id }}');
  if (!section) return;

  var buttons = section.querySelectorAll('.faq-question');

  buttons.forEach(function (btn) {
    btn.addEventListener('click', function () {
      var item = btn.closest('.faq-item');
      var isOpen = item.classList.contains('is-open');

      {% if section.settings.accordion_mode == 'single' %}
      section.querySelectorAll('.faq-item.is-open').forEach(function (openItem) {
        openItem.classList.remove('is-open');
        openItem.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
      });
      {% endif %}

      if (!isOpen) {
        item.classList.add('is-open');
        btn.setAttribute('aria-expanded', 'true');
      } else {
        item.classList.remove('is-open');
        btn.setAttribute('aria-expanded', 'false');
      }
    });
  });

  {% if section.settings.open_first %}
  var firstItem = section.querySelector('.faq-item');
  if (firstItem) {
    firstItem.classList.add('is-open');
    firstItem.querySelector('.faq-question').setAttribute('aria-expanded', 'true');
  }
  {% endif %}
})();
</script>

